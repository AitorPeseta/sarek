~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

include { SAREK } from './workflows/sarek'

//
// WORKFLOW: Run main nf-core/sarek analysis pipeline
//
workflow NFCORE_SAREK {
    SAREK ()
}

